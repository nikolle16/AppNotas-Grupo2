<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Notas___Grupo_2.Views.AggNota"
             Title="Agregar nota"
             BackgroundColor="Beige">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="20">
            <ImageButton
                Source="aggimagen.png"
                HorizontalOptions="Center"
                VerticalOptions="End"/>
            <Button
                x:Name="btnRegresar"
                Margin="0,0,0,10"
                Background="#00532c" TextColor="White" FontAttributes="Bold"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="btnRegresar_Clicked"
                HorizontalOptions="Center"
                SemanticProperties.Hint="Regresar a Menu Principal"
                Text="Regresar" />  
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>