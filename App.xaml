<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App_Notas___Grupo_2"
             x:Class="App_Notas___Grupo_2.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="Transparent" />
                <Setter Property="BarTextColor" Value="Black" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="NunitoRegular"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="NunitoBold"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
